<div class="container">
  <div class="row justify-content-center">
    <div id="registration" class="col-6 m-2">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :photo, as: :file %>
          <%= f.input :username,
                      hint: 'Only letters and numbers',
                      required: true,
                      input_html: { autocomplete: "username" }%>
          <%= f.input :email,
                      required: true,
                      # autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :first_name,
                      required: true,
                      input_html: { autocomplete: "first name" }%>
          <%= f.input :last_name,
                      required: true,
                      input_html: { autocomplete: "last name" }%>
          <%= f.input :phone,
                      required: true,
                      input_html: { autocomplete: "phone" }%>
          <%= f.label :teacher, 'Are you signing up as a teacher?' %>
          <%= f.input :teacher,
                      type: :check_box,
                      as: :boolean,
                      unchecked_value: false,
                      checked_value: true %>
          <div class="hidform" style="display:none">
            <%= f.input :bio,
                        hint: ("Feel free to fill these out later"),
                        input_html: { autocomplete: "bio" } %>
            <%= f.input :facebook,
                        input_html: { autocomplete: "facebook url" } %>
            <%= f.input :instagram,
                        input_html: { autocomplete: "instagram url" } %>
            <%= f.input :blog,
                        input_html: { autocomplete: "blog url" } %>
            <%= f.input :website,
                        input_html: { autocomplete: "any other website url" }%>
          </div>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-sign-up' %>
        </div>
      <% end %>

       <div class="header-container">
        <%= render "devise/shared/links" %>
       </div>
    </div>
  </div>
</div>
