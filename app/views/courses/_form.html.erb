<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 m-2">
      <%= simple_form_for [ @course ] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :duration %>
        <%= f.submit "Create a Course", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
