<div class="header-container">
  <h2><%= link_to @course.name, course_path(@course) %> </h2>
  <p> Date: <%= Time.parse(@occurence.date).to_formatted_s(:rfc822).gsub(/\:00\s\+0100/, "") %> </p>
</div>
<div class="main-container">
  <div class="split-cards1 cards">
    <p> Details:</p>
      <p><em><%= @course.description %> </em></p>
    <p> Teacher: <%= @course.teacher%> </p>
    <p> â‚¬<%= @occurence.price %> </p>
    <p> Location: <%= @occurence.location %></p>
    <p> <%= @course.duration%> minutes</p>
    <center>
        <p> <% if current_user.bookings.where(occurence_id: @occurence.id).first %>
               <strong>Already Booked</strong></p>
            <% elsif @occurence.capacity == @occurence.users %>
              <p>Full</p>
              <p> Please contact <%= @course.teacher %> for more information</p>

            <% else %>
              <%= link_to "Book", course_occurence_bookings_path(@course.id, @occurence.id), method: :post, class: "btn btn-primary" %>
            <% end %>
        <p> <%= link_to "See more times", course_path(@course), class: "btn btn-ghost" %> </p>
    </center>
  </div>
  <div class="split-cards2 cards">
    <h2> Attendees </h2>
    <p> <%= @occurence.bookings.count %> / <%= @occurence.capacity %> </p>
    <% if current_user.id == @course.user_id %>
        <table class="attendees-list">
          <tr>
            <th> First Name</th>
            <th> Last Name</th>
            <th> Email </th>
          </tr>
          <% @occurence.users.each do |client| %>
            <tr>
              <td> <%= client.first_name.split(" ").first.capitalize %> </td>
              <td> <%= client.last_name.split(" ").first.capitalize %> </td>
              <td> <%= client.email %> </td>
            </tr>
          <% end %>
        </table>
    <% else %>
        <center>
            <p><% if current_user.bookings.where(occurence_id: @occurence.id).first %>
                   <strong>Thank You for Booking</strong></p>
                <% elsif @occurence.capacity == @occurence.users %>
                  <p>Full</p>
                  <p> Please contact <%= @course.teacher %> for more information</p>

                <% else %>
                  <%= link_to "Would you like to join this class?", course_occurence_bookings_path(@course.id, @occurence.id), method: :post, class: "btn btn-primary" %>
                <% end %>
                <p>or</p>
            <p> <%= link_to "See more times", course_path(@course), class: "btn btn-ghost" %> </p>
    </center>
    <% end %>
  </div>
</div>
